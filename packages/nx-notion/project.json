{
  "name": "nx-notion",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nx-notion",
  "projectType": "library",
  "release": {
    "version": {
      "conventionalCommits": true
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/nx-notion",
        "main": "packages/nx-notion/index.ts",
        "tsConfig": "packages/nx-notion/tsconfig.lib.json",
        "assets": [
          "README.md",
          "LICENSE",
          {
            "input": "./packages/nx-notion/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/nx-notion/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/nx-notion",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/nx-notion",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "local-publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build",
          "cd dist && npm version prepatch",
          "nx nx-release-publish"
        ],
        "parallel": false
      }
    },
    "local-registry": {
      "executor": "@nx/js:verdaccio",
      "options": {
        "port": 4873,
        "config": ".verdaccio/config.yml",
        "storage": "tmp/local-registry/storage"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "./src",
          "{projectRoot}/package.json",
          "./package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectName}"],
      "options": {
        "jestConfig": "jest.config.ts"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {}
    },
    "local-run": {
      "executor": "nx-notion:export-db-pages-to-md",
      "options": {
        "databaseId": "0075cfc0294c48399b3509440b810ca4",
        "outputDir": "tmp/md"
      }
    }
  }
}
